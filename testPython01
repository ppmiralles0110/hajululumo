from flask import Flask, render_template, request, redirect, url_for

app = Flask(__name__)

# Mock database of users (in a real application, you would use a proper database)
users = {'john': 'password123', 'jane': 'pass123'}

# Route for handling the login page logic
@app.route('/', methods=['GET', 'POST'])
def login():
    if request.method == 'POST':
        username = request.form['username']
        password = request.form['password']
        if username in users and users[username] == password:
            # Redirect to the home page or some other page after successful login
            return redirect(url_for('home'))
        else:
            # Invalid credentials, show an error message to the user
            return render_template('login.html', error='Invalid username or password.')
    # For GET requests, just render the login form template
    return render_template('login.html')

# Route for the home page after successful login
@app.route('/home')
def home():
    return render_template('home.html')

if __name__ == '__main__':
    app.run(debug=True)
